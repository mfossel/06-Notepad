<Window x:Class="Notepad_menu.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Mike's Text Editor" Height="350" Width="525" Background="White" WindowState="Maximized">
    <Grid>
        <Menu Height="27" VerticalAlignment="Top" Cursor="Arrow">
            <MenuItem Header="FILE">
                <MenuItem Header="NEW" Click="newClick"/>
                <MenuItem Header="OPEN" Click="openClick"/>
                <MenuItem Header="SAVE" Click="saveClick" />
                <MenuItem Header="EXIT" Click="exitClick"/>
            </MenuItem>
            <MenuItem Header="INFO" Click="MenuItem_Click">
                <MenuItem Header="ABOUT"/>
            </MenuItem>
        </Menu>
        <TextBox x:Name="mainText" Margin="0,27,0,0" TextWrapping="Wrap" Background="#FF96F980" SpellCheck.IsEnabled="True" FontFamily="Tahoma" AcceptsReturn="True" AcceptsTab="True" FontSize="16"/>
    </Grid>
</Window>
