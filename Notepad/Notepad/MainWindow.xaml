<Window x:Class="Notepad.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Mike's Text Editor" Height="350" Width="525" WindowState="Maximized">
    <Grid>
        <TextBox x:Name="mainText" Margin="0,29,0,0" TextWrapping="Wrap" Background="#FFF9F99C"/>
        <Button x:Name="openButton" Content="OPEN" HorizontalAlignment="Left" VerticalAlignment="Top" Width="109" Height="29" Click="openButton_Click" BorderThickness="1"/>
        <Button Content="SAVE" HorizontalAlignment="Left" Margin="109,0,0,0" VerticalAlignment="Top" Width="109" Height="29" Click="Button_Click"/>
        <Button Content="NEW" HorizontalAlignment="Left" Margin="218,0,0,0" VerticalAlignment="Top" Width="109" Height="29" Click="Button_Click_1"/>

    </Grid>
</Window>
